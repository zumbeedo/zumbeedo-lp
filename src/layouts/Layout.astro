---
interface Props {
  title: string;
}

import phone from "../assets/images/android.png";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-secondary-250">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <link
      rel="canonical"
      href={`https://zumbeedo.com.br${Astro.url.pathname}`}
    />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta
      name="description"
      content="Um aplicativo inovador para monitorar e garantir o bem-estar contínuo das suas abelhas!"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`https://zumbeedo.com.br${Astro.url.pathname}`}
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Um aplicativo inovador para monitorar e garantir o bem-estar contínuo das suas abelhas!"
    />
    <meta property="og:image" content={phone.src} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content={`https://zumbeedo.com.br${Astro.url.pathname}`}
    />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Um aplicativo inovador para monitorar e garantir o bem-estar contínuo das suas abelhas!"
    />
    <meta property="twitter:image" content={phone.src} />

    <!-- Meta Pixel Code -->
    <script is:inline>
      window.fbq = function () {
        window.fbq.callMethod
          ? window.fbq.callMethod.apply(window.fbq, arguments)
          : window.fbq.queue.push(arguments);
      };
      if (!window._fbq) window._fbq = window.fbq;
      window.fbq.push = window.fbq;
      window.fbq.loaded = !0;
      window.fbq.version = "2.0";
      window.fbq.queue = [];
    </script>
    <script is:inline async src="https://connect.facebook.net/en_US/fbevents.js"
    ></script>
    <script is:inline>
      fbq("init", "1563030861063294");
      fbq("track", "PageView");
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=1563030861063294&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
